<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiContactsApp.Views.ContactListPage"
             Title="Kapcsolatok">
    <StackLayout Padding="10" Spacing="10">
        <Button Text="Ãšj kapcsolat"
                BackgroundColor="#4CAF50"
                TextColor="Black"
                Clicked="OnAddContactClicked"/>

        <CollectionView x:Name="ContactsCollectionView"
                        SelectionMode="Single"
                        SelectionChanged="OnSelectionChanged">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Frame BorderColor="RosyBrown" CornerRadius="10" Margin="5" Padding="10">
                        <StackLayout>
                            <Label Text="{Binding Name}" FontAttributes="Bold" FontSize="18" />
                            <Label Text="{Binding Email}" FontSize="14" />
                            <Label Text="{Binding Phone}" FontSize="14" />
                        </StackLayout>
                    </Frame>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
    </StackLayout>
</ContentPage>
